{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "types": ["node"],
    "allowArbitraryExtensions": true,
    "resolvePackageJsonImports": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}